{
  "name": "cola-space",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/LJJimChen/cola-space.git"
  },
  "homepage": "https://github.com/LJJimChen/cola-space",
  "bugs": {
    "url": "https://github.com/LJJimChen/cola-space/issues"
  },
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "build": "tsc -p tsconfig.json",
    "postinstall": "npx playwright install --with-deps chromium || true",
    "compose:up": "docker compose up -d",
    "compose:logs": "docker compose logs -f",
    "compose:down": "docker compose down",
    "compose:build": "docker compose build",
    "pm2:start": "npx pm2 start ecosystem.config.js",
    "pm2:restart": "npx pm2 restart cola-space",
    "pm2:stop": "npx pm2 stop cola-space",
    "pm2:delete": "npx pm2 delete cola-space",
    "pm2:status": "npx pm2 status",
    "pm2:logs": "npx pm2 logs cola-space",
    "pm2:save": "npx pm2 save",
    "pm2:startup": "npx pm2 startup || true",
    "start:pm2": "npm run build && npx pm2 start ecosystem.config.js && npx pm2 save"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^3.0.4",
    "axios": "^1.13.2",
    "dotenv": "^16.6.1",
    "cron": "^2.4.4",
    "playwright": "1.48.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "pm2": "^5.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
