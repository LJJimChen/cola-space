{
  "name": "cola-space",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/LJJimChen/cola-space.git"
  },
  "homepage": "https://github.com/LJJimChen/cola-space",
  "bugs": {
    "url": "https://github.com/LJJimChen/cola-space/issues"
  },
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "build": "tsc -p tsconfig.json",
    "postinstall": "npx playwright install --with-deps chromium || true",
    "docker:build": "docker build -t cola-space:latest .",
    "docker:run": "docker run -d --name cola-space -p 3000:3000 --shm-size=1g -v $PWD/.data:/app/.data cola-space:latest",
    "docker:stop": "docker stop cola-space || true",
    "docker:rm": "docker rm -f cola-space || true",
    "docker:rebuild": "npm run docker:rm && npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.5",
    "playwright": "^1.48.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
